<div class="drawer__header">
	<div class="dotted-area -bottom -dark margin-bottom cf">
		<h2 class="drawer__heading -alpha float--left">{{mainTitle}}</h2>
		{{#ui/generic-element action="closeBottomDrawer" tagName="a" classes="js-close-bottom-drawer float--right drawer__close svg-close-drawer" data-grunticon-embed=""}}
		{{/ui/generic-element}}
	</div>
</div>
	
<div class="drawer__inner">
	<div class="create-a-canvas -form -admin">
		
		<div class="dotted-area -bottom -dark margin-bottom">
			<div>
				{{input value=title placeholder="Title" class="-full margin-bottom"}}
				{{#if canvas.errors.title}}
					<p class="message -error margin-bottom">{{canvas.errors.title.message}}</p>
				{{/if}}
			</div>
			
			<div>
				{{textarea placeholder="Description" value=description class="-full margin-bottom"}}
				{{#if canvas.errors.description}}
					<p class="message -error margin-bottom">{{canvas.errors.description.message}}</p>
				{{/if}}
			</div>
			
			<div class="aligned-grid -middle">
				<div class="margin-right">
					{{ select-2
						content=allCategories
						value=categories
						optionLabelPath="title"
						placeholder="Choose a category"
						multiple=true
					}}
				</div>
				<div class="margin-right">
					{{input value=author placeholder="Author Name" class="-full margin-bottom"}}
					{{#if canvas.errors.author}}
						<p class="message -error margin-bottom">{{canvas.errors.author.message}}</p>
					{{/if}}
				</div>
				<div class="margin-right">
					{{input value=twitter placeholder="Twitter Name" class="-full margin-bottom"}}
					{{#if canvas.errors.twitter}}
						<p class="message -error margin-bottom">{{canvas.errors.twitter.message}}</p>
					{{/if}}
				</div>
			</div>

			{{!-- {{ select-2
				content=allStories
				value=stories
				optionLabelPath="title"
				placeholder="Choose stories"
				multiple=true
			}} --}}
			
			{{#each canvas.errors.messages as |message|}}
				<p class="message -error">
					{{message}}
				</p>
			{{/each}}
		</div>
		
		{{yield}}
		
		<div class="cf">
			<button class="btn -action float--right" {{action "save"}}>Save</button>
		</div>

	</div>
</div>


<section class="gallery__section -search">
		<div class="search">
			<div class="search__input-wrapper {{if isLoading '-loading'}}">
				{{input value=debouncedSearchTerm class="search__input delta" placeholder="Search"}}
				{{#if showClear}}
					<button value="clear" {{action 'clearSearchTerm'}} class="search__clear svg-input-clear">Clear</button>
				{{/if}}
			</div>
		</div>

		{{#if items}}
			<h3 class="thumb-list-heading float--left">Search results</h3>
			<div class="cf"></div>
			<div class="js-thumb-list thumb-list dotted-area -bottom -dark pad-bottom">
				<ul class="thumb-list__inner">
					{{#each items as |canvas|}}
						{{stories/story-library/list-view-thumbnail model=canvas action="loadACanvas" thumbIcon="-add-canvas"}}
					{{/each}}
				</ul>
			</div>
		{{/if}}
		{{#if noResults}}
			<h3 class="thumb-list-heading">Sorry we couldn't find any stories, please try again.</h3>
		{{/if}}
				
		{{yield}}	
</section>

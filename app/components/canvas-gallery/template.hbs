	<h2>Canvas Gallery</h2>

	<div class="js-gallery-button btn-list">
		<button class="btn -toggle" {{action "switchView" 'featured' }} data-btn-type="featured">Browse</button>
		<button class="btn -toggle" {{action "switchView" 'categories' }} data-btn-type="categories">Categories</button>
		<button class="btn -toggle" {{action "switchView" 'search' }} data-btn-type="search">Search</button>
		<button class="btn -blue -create float--right" {{action 'createACanvas'}} data-btn-type="create">
			<span class="icon-conversation svg-conversation" data-grunticon-embed></span>
			Create a Canvas
		</button>
	</div>
		
	<div class="gallery__inner">
		{{yield}}
		{{!-- DISPLAY COMPONENT BASED ON CURRENT VIEW PROPERTY --}}
		{{component currentView}}
	</div>

{{#stories/story-base
    title=''
    subTitle=''
    color=ragRating
    width="-w1"
    height="-h1"
    data-ss-colspan="1"
    viewOnly=true
}}

    <main>
        <div spc-rag>
            <div cpn-divide="bottom light" cpn-margin="bottom-half">
                <p cpn-margin="bottom-none" spc-rag_value>{{ragValue}}</p>
            </div>
            <div cpn-divide="bottom light" cpn-margin="bottom-half">
                <p cpn-margin="bottom-half" spc-rag_desc>
                    <span>{{ragDesc1}}</span>
                    <span>{{ragDesc2}}</span>
                </p>
            </div>
            <p spc-rag_instruction cpn-margin="bottom-none">Tap to view</p>
        </div>
    </main>
{{/stories/story-base}}
